<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="beanInitMethod"
       default-destroy-method="beanDestroyMethod">

    <bean id="customerService" class="com.ai4everyone.tutorial.constructor.service.CustomerServiceImpl"/>
    <bean id="generalService" class="com.ai4everyone.tutorial.constructor.service.GeneralServiceImpl">
        <constructor-arg name="service" ref="customerService"/>
    </bean>
</beans>